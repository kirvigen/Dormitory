<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocumentsActivity">
    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/fon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="5dp"
            android:tint="#fff"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@raw/font"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="Документы"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="9dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/document1"
                android:autoSizeTextType="uniform"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="#000"
                android:lines="1"
                android:text="Правила проживания в общежитии"
                android:fontFamily="@raw/font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="9dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/document2"
                android:autoSizeTextType="uniform"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="#000"
                android:lines="1"
                android:text="Положение о распределении мест"
                android:fontFamily="@raw/font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="9dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/document3"
                android:autoSizeTextType="uniform"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="#000"
                android:lines="1"
                android:text="Договор и цена"
                android:fontFamily="@raw/font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>