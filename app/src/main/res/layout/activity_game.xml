<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">
<ImageView
    android:layout_width="match_parent"
    android:src="@drawable/bg_game"
    android:scaleType="centerCrop"
    android:layout_height="match_parent"/>
        <LinearLayout
            android:background="@drawable/bg_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:layout_marginLeft="5dp"
                android:tint="#fff"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/menu"
                android:background="@drawable/bg_menu"
                android:padding="10dp"
                android:visibility="visible"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lose"
                    android:textSize="25sp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:fontFamily="@raw/font"
                    android:text="Вы проиграли"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/you_score"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:fontFamily="@raw/font"
                    android:text="Ваш рекорд: 20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="9dp"
                    android:background="@drawable/button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:layout_centerInParent="true"
                        android:id="@+id/play"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:lines="1"
                        android:autoSizeTextType="uniform"
                        android:textColor="#000"
                        android:text="Играть"
                        android:fontFamily="@raw/font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/game"
                android:orientation="vertical"
                android:alpha="0"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_menu"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/level"
                        android:textSize="25sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="@raw/font"
                        android:text="Уровень:0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:text="Счет: 0"
                        android:id="@+id/scope"
                        android:fontFamily="@raw/font"
                        android:textSize="25sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/time"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:fontFamily="@raw/font"
                        android:text="Времени осталось:0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/item_0"
                        style="@style/ImageGame"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/item_1"

                        style="@style/ImageGame"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/item_2"

                        style="@style/ImageGame"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/item_3"

                        style="@style/ImageGame"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/item_4"
                        style="@style/ImageGame"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/item_5"

                        style="@style/ImageGame"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/item_6"
                        style="@style/ImageGame"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/item_7"
                        style="@style/ImageGame"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/item_8"
                        style="@style/ImageGame"/>
                </LinearLayout>
            </LinearLayout>


</RelativeLayout>